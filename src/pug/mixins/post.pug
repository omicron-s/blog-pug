mixin post(title, info, img, link)
  article.post
    h2.post__title #{title}

    .post__info #{info}
    .post__img
      img(src="./img/posts-preview/" + img, alt= title)
    .post__content 
      block
    .post__footer
      .post__read-more
        +btn-read-more('read more', link)
      .post__share-icons
        include ./../sections/_share-icons.pug